<div id="place-beers" class="tab-pane fade" data-role="place-panel">
    <div class="tab-pane fade active in">
        <div class="col-lg-12">
            <h3 class="page-header">{{ 'Beers'|trans }}</h3>
        </div>
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="control-label" for="beer-filter">{{ 'Filter beers by brewery'|trans }}</label>
                        <select id="brewery-filter" class="form-control selectpicker brewery-filter" data-live-search="true">
                            <option value="" class="filter-default">{{ 'All breweries'|trans }}</option>
                            {% for brewery in breweries %}
                                <option value="{{ brewery.name }}">{{ brewery.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.beers) }}
                        <span class="label-subtext">{{ 'Beer not found? You can add a new one by'|trans }} <a class="content-link" data-id="beer-new-show">{{ 'clicking here'|trans }}</a></span>
                        {{ form_widget(form.beers, {'attr': {'data-id': 'beer-choice', 'class': 'beer-select'}}) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12" id="beer-new" hidden>
                    {% include 'partial/beer/form.html.twig' with {'form': beerForm, 'beerTypeForm': beerTypeForm, 'breweryForm': breweryForm, 'isEmbedded': true} %}
                </div>
            </div>
            <div class="row form-group selected-beers" data-id="selected-beers"></div>
            {# templates #}
            <span class="label label-success beer-label" data-role="beer-label" data-template="1" data-beer-id="">
                <span data-role="beer-name"></span>
                <i class="fa fa-times" data-role="beer-delete"></i>
            </span>
            <div class="col-md-12 beer-list form-group" data-role="beer-list" data-template="1">
                <h5 class="page-header" data-role="brewery-name"></h5>
            </div>
        </div>
    </div>
</div>
