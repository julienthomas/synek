<div id="place-information" class="tab-pane fade active in" data-role="place-panel">
    <div class="col-lg-12">
        <h3 class="page-header">{{ 'Information'|trans }}</h3>
    </div>
    <div class="col-lg-4">
        <div class="form-group">
            {{ form_row(form.name) }}
        </div>
        <div class="form-group">
            {{ form_row(form.email) }}
        </div>
        <div class="form-group">
            {{ form_row(form.phone) }}
        </div>
        <div class="form-group">
            {{ form_row(form.website) }}
        </div>
        <div class="form-group">
            {{ form_row(form.facebook) }}
        </div>
    </div>
    {% if isShop and form.description is defined %}
        <div class="col-lg-12">
            <div class="form-group">
                {{ form_row(form.description) }}
            </div>
        </div>
    {% endif %}
</div>