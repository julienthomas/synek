<div class="panel">
    <div class="panel-body">
        {% if isEmbedded is not defined %}
            {{ form_start(form) }}
        {% endif %}
        <div class="col-lg-12">
            <h3 class="page-header">
                {% if isEmbedded is not defined %}
                    {{ 'Information'|trans }}
                {% else %}
                    {{ 'Brewery information'|trans }}
                {% endif %}
                <div class="panel-action">
                    {% if isEmbedded is not defined %}
                        <a href="{{ path('admin_brewery') }}" class="btn btn-danger"><i class="fa fa-times"></i> {{ 'Cancel'|trans }}</a>
                        <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> {{ 'Send'|trans }}</button>
                    {% else %}
                        <button type="button" data-id="brewery-cancel" class="btn btn-danger"><i class="fa fa-times"></i> {{ 'Cancel'|trans }}</button>
                        <button type="button" data-id="brewery-submit" data-url="{{ path('auth_brewery_create') }}" class="btn btn-success"><i class="fa fa-check"></i> {{ 'Send'|trans }}</button>
                    {% endif %}
                </div>
            </h3>
        </div>
        <div class="{% if isEmbedded is not defined %}col-lg-4{% else %}col-lg-12{% endif %}">
            {{ form_row(form.name) }}
            {{ form_row(form.country) }}
        </div>
        {% if isEmbedded is not defined %}
            {{ form_end(form) }}
        {% else %}
            {{ form_row(form._token) }}
        {% endif %}
    </div>
</div>