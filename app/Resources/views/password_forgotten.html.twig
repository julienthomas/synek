{% extends 'layout.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('assets/css/password-reset.css') }}" rel="stylesheet">
{% endblock stylesheets %}

 {% block current_user %}
 {% endblock current_user %}

{% block nav_left %}
{% endblock nav_left%}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ 'Forgotten password'|trans }}</h3>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-success btn-reset">{{ 'Send'|trans }}</button>
                        <a href="{{ path('home') }}" class="btn btn-danger btn-reset">{{ 'Cancel'|trans }}</a>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}
