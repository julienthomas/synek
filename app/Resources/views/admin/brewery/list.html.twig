{% extends 'layout_admin.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('assets/lib/datatables-plugins/dataTables.bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/lib/datatables-responsive/dataTables.responsive.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/datatable.css') }}" rel="stylesheet">
{% endblock stylesheets %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'Breweries list'|trans }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading datatable-heading-add">
                    {{ 'Beers'|trans }}
                    <a href="{{ path('admin_brewery_add') }}" class="btn btn-success pull-right"><i class="fa fa-plus"></i> {{ 'Add'|trans }}</a>
                </div>
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="breweries-list" data-url="{{ path('admin_brewery_refresh') }}">
                        <thead>
                            <tr>
                                <th width="25%">{{ 'Name'|trans }}</th>
                                <th width="25%">{{ 'Country'|trans }}</th>
                                <th width="25%">{{ 'Beer number'|trans }}</th>
                                <th width="25%"></th>
                            </tr>
                            <tr data-id="datatable-filters">
                                <th data-type="text">{{ 'Search name'|trans }}</th>
                                <th data-type="choice" data-choices="{{ countries|json_encode }}">{{ 'Search country'|trans }}</th>
                                <th data-type="text">{{ 'Search number'|trans }}</th>
                                <th data-type="search"><i class="fa fa-search"></i> {{ 'Search'|trans }}</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/lib/datatables/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assets/lib/datatables-plugins/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/lib/datatables-responsive/dataTables.responsive.js') }}"></script>
    <script src="{{ asset('assets/js/searchable-datatable.js') }}"></script>
    <script src="{{ asset('assets/js/admin/brewery/list.js') }}"></script>
{% endblock javascripts %}