<div class="col-lg-3 col-md-6">
    <div class="panel {{ class }}">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-3">
                    <i class="fa {{ icon }} fa-5x"></i>
                </div>
                <div class="col-xs-9 text-right">
                    <div class="huge">{{ stats['count'] }}</div>
                    <div>{{ title }}</div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    {{ 'Newest'|trans }}:
                    {% if stats['newest'] %}
                        {{ stats['newest']['name'] }} ({{ stats['newest']['date']|date('Y/m/d', false) }})
                    {% endif %}
                </div>
            </div>
        </div>
        <a href="{{ link }}">
            <div class="panel-footer">
                <span class="pull-left">{{ 'List'|trans }}</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
    </div>
</div>