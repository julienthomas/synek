{% extends 'layout_admin.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('assets/css/admin/home/home.css') }}" rel="stylesheet">
{% endblock stylesheets %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'Dashboard'|trans }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    {% include 'admin/home/partial/panel.html.twig' with {'class': 'panel-primary', 'icon': 'fa-shopping-cart', 'title': 'Shops', 'stats': stats['shops'], 'link': path('admin_shop')} %}
                    {% include 'admin/home/partial/panel.html.twig' with {'class': 'panel-green', 'icon': 'fa-users', 'title': 'Partners', 'stats': stats['partners'], 'link': path('admin_partner')} %}
                    {% include 'admin/home/partial/panel.html.twig' with {'class': 'panel-yellow', 'icon': 'fa-beer', 'title': 'Beers', 'stats': stats['beers'], 'link': path('admin_beer')} %}
                    {% include 'admin/home/partial/panel.html.twig' with {'class': 'panel-red', 'icon': 'fa-tags', 'title': 'Beer types', 'stats': stats['beerTypes'], 'link': path('admin_beer_type')} %}
                    {% include 'admin/home/partial/panel.html.twig' with {'class': 'panel-breweries', 'icon': 'fa-home', 'title': 'Breweries', 'stats': stats['breweries'], 'link': path('admin_brewery')} %}
                </div>
            </div>
        </div>
    </div>
{% endblock body %}