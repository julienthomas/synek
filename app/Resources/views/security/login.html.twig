{% extends 'layout.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('assets/css/login.css') }}" rel="stylesheet">
{% endblock stylesheets %}

{% block nav_left %}
{% endblock nav_left%}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ 'Please sign in'|trans }}</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <label for="username">{{ 'Login'|trans }}</label>
                                    <input type="text" class="form-control" id="username" name="_username" value="{{ lastUsername }}" autofocus="">
                                </div>
                                <div class="form-group">
                                    <label for="password">{{ 'Password'|trans }}</label>
                                    <input type="password" class="form-control" id="password" name="_password" />
                                    <a href="{{ path('password_forgotten') }}">{{ 'Reset password' }}</a>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="remember_me" name="_remember_me" />Remember Me
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-success btn-login">{{ 'Log in'|trans }}</button>
                                <a href="{{ path('home') }}" class="btn btn-danger btn-login">{{ 'Cancel'|trans }}</a>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}
