{% extends 'layout.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('assets/css/home.css') }}" rel="stylesheet">
{% endblock stylesheets %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'Shops list'|trans }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 home-wrapper">
            <div class="home-overflow">
                <div id="home-map" data-url="{{ path('home_places') }}"></div>
                <div class="place-info col-lg-4" data-id="place-info">
                    <div class="row">
                        <div class="col-lg-12">
                            <button type="button" class="btn btn-danger pull-left" data-id="place-info-close"><i class="fa fa-times"></i> {{ 'Close'|trans }}</button>
                            <a href="#" class="btn btn-default pull-right" data-id="place-information-link"><i class="fa fa-search"></i> {{ 'View place description'|trans }}</a>
                        </div>
                        <div class="col-lg-12">
                            <h3 class="page-header" data-id="place-name"></h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div data-id="place-address"></div>
                            <div data-id="place-phone" hidden><i class="fa fa-phone"></i> <span data-id="place-phone-number"></span></div>
                            <div data-id="place-email" hidden><i class="fa fa-envelope"></i> <span data-id="place-email-address"></span></div>
                            <div class="place-available-beers" data-id="place-available-beers">
                                <h4>{{ 'Available beers'|trans }}</h4>
                                <div class="place-available-beers-list" data-id="place-available-beers-list">
                                    {#<h5 class="page-header"></h5>#}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}

{% block javascripts %}
    <script src="https://maps.googleapis.com/maps/api/js?key={{ google_api_key }}"></script>
    <script src="{{ asset('assets/lib/geolocation-marker/geolocation-marker.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/js/home.js') }}"></script>
{% endblock javascripts %}